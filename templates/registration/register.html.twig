{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Create your account
        </h2>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                <div>
                    <label for="{{ registrationForm.name.vars.id }}" class="block text-sm font-medium text-gray-700">
                        Name
                    </label>
                    <div class="mt-1">
                        {{ form_widget(registrationForm.name, {
                            'attr': {
                                'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' ~
                                (form_errors(registrationForm.name) ? ' border-red-300' : '')
                            }
                        }) }}
                        {% if form_errors(registrationForm.name) %}
                            <p class="mt-1 text-sm text-red-600">{{ form_errors(registrationForm.name) }}</p>
                        {% endif %}
                    </div>
                </div>

                <div>
                    <label for="{{ registrationForm.email.vars.id }}" class="block text-sm font-medium text-gray-700">
                        Email
                    </label>
                    <div class="mt-1">
                        {{ form_widget(registrationForm.email, {
                            'attr': {
                                'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' ~
                                (form_errors(registrationForm.email) ? ' border-red-300' : '')
                            }
                        }) }}
                        {% if form_errors(registrationForm.email) %}
                            <p class="mt-1 text-sm text-red-600">{{ form_errors(registrationForm.email) }}</p>
                        {% endif %}
                    </div>
                </div>

                <div>
                    <label for="{{ registrationForm.plainPassword.vars.id }}" class="block text-sm font-medium text-gray-700">
                        Password
                    </label>
                    <div class="mt-1">
                        {{ form_widget(registrationForm.plainPassword, {
                            'attr': {
                                'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' ~
                                (form_errors(registrationForm.plainPassword) ? ' border-red-300' : '')
                            }
                        }) }}
                        {% if form_errors(registrationForm.plainPassword) %}
                            <p class="mt-1 text-sm text-red-600">{{ form_errors(registrationForm.plainPassword) }}</p>
                        {% endif %}
                    </div>
                </div>

                <div>
                    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Register
                    </button>
                </div>
            {{ form_end(registrationForm) }}

            <div class="mt-6">
                <div class="relative">
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white text-gray-500">
                            Already have an account?
                            <a href="{{ path('app_login') }}" class="font-medium text-indigo-600 hover:text-indigo-500">
                                Sign in
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 